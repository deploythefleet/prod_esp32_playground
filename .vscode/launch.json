{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QEMU",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "${config:esp32.gdbPath}",
            "miDebuggerServerAddress": "localhost:3333",
            "program": "${workspaceFolder}/${config:esp32.activeProject}/build/${config:esp32.activeProjectName}.elf",
            "cwd": "${workspaceFolder}/${config:esp32.activeProject}",
            "stopAtEntry": true,
            "preLaunchTask": "Start QEMU",
            "postDebugTask": "Stop QEMU",
            "setupCommands": [
                {
                    "text": "set remote hardware-watchpoint-limit 2"
                },
                {
                    "text": "maintenance flush register-cache"
                },
            ],
            "logging": {
                "exceptions": true,
                "engineLogging": false,
                "moduleLoad": true,
                "programOutput": true,
                "trace": true,
                "traceResponse": false
            }
        }


    ]
}