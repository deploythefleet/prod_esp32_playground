{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start QEMU",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "qemu",
                // Additional QEMU arguments to set up networking and GDB server, e.g.:
                // "--qemu-extra-args",
                // "-nic model=open_eth,mac=52:54:00:c9:18:27,hostfwd=tcp::1883-:1883",
                "--gdb",
                "monitor",
            ],
            "options": {
                "cwd": "${workspaceFolder}/${config:esp32.activeProject}",
                "env": {
                    "IDF_TARGET": "${config:idf.target}"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "close": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Executing action: qemu$",
                    "endsPattern": "^Waiting for GDB to connect"
                }
            }
        },
        {
            "label": "Stop QEMU",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "pkill -TERM -f 'idf.py qemu' || true"
            ],
            "presentation": {
                "reveal": "never",
                "close": true
            }
        }
    ]
}
